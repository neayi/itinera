# Dockerfile for development
FROM node:22-alpine

RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Run development server with Turbopack
CMD ["npm", "run", "dev", "--", "--turbopack"]
